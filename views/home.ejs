<html>
    <head>
        <title><%= locals.title %></title>
    </head>
    <Style>
        * {
            margin: 0;
        }
        html, body {
            height: 100%;
            width: 100%;
        }
        body {
            background-color: rgb(229, 224, 216);
            color: rgb(109, 255, 11);
        }
        h1 {
            color: rgb(252, 246, 246);
            border: 4px solid blue;
            border-radius: 5px;
            background-color: black;
            padding: 5px;
            margin: 5px;
        }

        p {
            background-color: rgb(30, 2, 2);
            border: 2px solid rgb(164, 240, 12);
            border-radius: 9px;
            padding: 2px 2px 2px 2px;
            margin: 2px 2px 2px 2px;

        }

        .sp {
            background-color: rgb(0, 0, 0);
            border: 2px solid rgb(17, 225, 221);
            border-radius: 9px;
            padding: 2px 2px 8px 2px;
            margin: 2px 5px 8px 2px;

        }
    </Style>
    <body>
        <h1>Contact List</h1>
        <div class="container">
            <% for (let i of contact_list) { %>
                <li>
                    <p> <span class="sp">Name:</span> <%=  i.name %></p>
                    <p><span class="sp">Email:</span><%=  i.email %></p>
                    <p><span class="sp">Phone:</span><%=  i.phone %></p>
                    <p><span class="sp">Message:</span><%=  i.message %></p>
                </li>
                <% } %>
        </div>
    </body>
</html>